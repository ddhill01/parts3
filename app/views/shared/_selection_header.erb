<div class="form-group">
  <%= form.label :Site %>
  <%= form.select :SiteLongName, options_for_select([["Select a Site", nil]] + @sites.map { |site| [site.SiteLongName, site.SiteID] }), {}, class: "form-control site-select" %>
</div>

<div class="form-group">
  <%= form.label :Area %>
  <%= form.select :SiteArea, {}, {}, class: "form-control site-area-select" %>
</div>

<div class="form-group">
  <%= form.label :Room %>
  <%= form.select :SiteRoom, {}, {}, class: "form-control site-room-select" %>
</div>

<%= form.submit "Submit", class: "btn btn-primary" %>