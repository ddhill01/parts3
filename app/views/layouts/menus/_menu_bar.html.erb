  <html>
   <title>PdM PARTS 3.0</title>
    <style>
       
      /* Style the menu bar */
      .menu {
        display: inline;
        background-color: #0078D7;
        justify-content: space-between;
        color: white;
        padding: .2rem;
        position: fixed;
        top: 0;
        left: 0;
        width:100%;
        z-index: 999;
      }
      /* Style the menu items */
      .menu-item {
        list-style-type: none;
        display: inline;
        margin: 0;
        padding: 0;
        margin: 0 1rem;
        font-size: 1.2rem;
        text-transform: uppercase;
      }
      .menu-item a {
        color: white;
        text-decoration: none;
      }
      .menu-item a:hover {
        border-bottom: 2px solid white;
      }
      /* Style the dropdown menus */
      .dropdown {
        position: relative;
        display: inline-block;
      }
      .dropdown-menu {
        display: none;
        list-style-type: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #333;
        padding: 1rem;
        z-index: 999;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.8);
      }
      .dropdown:hover .dropdown-menu {
        display: block;
      }
      .dropdown-menu-item {
        margin: 5rem 1;
      }
      .dropdown-menu-item a {
        color: rgb(255, 255, 255);
        text-decoration: none;
      }
      .dropdown-menu-item a:hover {
        border-bottom: none;
        background-color: rgba(0, 255, 255, 0.765);
      }
    </style>
  </head>
  <body>
    <div class="menu">
      
      <ul class="menu-items">
        <a href="/vibration_analysis">VIBRATION
        <%= render partial: 'layouts/menus/main_menu_bar/therm_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/align_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/maximo_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/uav_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/motion_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/asset_mgt_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/app_set_menu' %>
        <%= render partial: 'layouts/menus/main_menu_bar/testing_menu' %>

      </ul>
    </div>
  </html>
